<!-- views/password-reset.ejs -->
<!doctype html>
<html lang="en">
	<head>
		<title><%= settings.appTitle %> - Reset Password</title>
		<% include partials/meta %>
		<script>function onSubmit(token){document.getElementById("passwordreset").submit();}</script>
	</head>
	<body role="document" class="intro">
		<div id='wrapper'>
			<div id='page-content-wrapper'>
				<div id="main" class="container intro-form" role="main">
					<div class="logo" style="background: url('<%= settings.logo %>') no-repeat top;"><span></span></div>
					<div class="slogan"><%= settings.appSlogan %></div>
					<div class="description"><%= settings.appDescription %></div>
					<div class="well">
						<h1 class="text-primary"><%= settings.appTitle %> - Reset Password</h1>
						<!-- show any messages that come back with authentication -->
						<% if (message != '') { %>
							<div class="alert alert-danger"><%= message %></div>
						<% } %>
						<!-- PASSWORD-RESET FORM -->
						<form class="form-horizontal" id="passwordreset" role="form" action="password-reset" method="post">
							<div class="form-group">
								<div class="col-sm-12">
									<input class="form-control" type="text" name="email" placeholder="Enter the email address you registered with.">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-12">
									<input class="form-control" type="text" name="last_name" placeholder="Enter the surname (last name) you registered with.">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-12">
									<input class="form-control" type="hidden" name="password" value="<%= pwreset %>" readonly>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-offset-9 col-sm-3">
									<button class="btn btn-primary btn-lg g-recaptcha" type="submit" data-sitekey="<%= settings.reCaptchaKey %>" data-callback="onSubmit" data-badge="bottomright" data-size="invisible">Next</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="footer text-with-background text-centered">
				<p>Or, go back to the <a href="<%= settings.chRoot %>/">Home</a> page.</p>
			</div>
		</div>
	</body>
</html>