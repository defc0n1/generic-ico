<!-- views/password.ejs -->
<!doctype html>
<html lang="en">
	<head>
		<title><%= settings.appTitle %> - Change Password</title>
		<% include partials/meta %>
	</head>
	<body role="document" class="intro">
		<div id='wrapper'>
			<div id='page-content-wrapper'>
				<div id="main" class="container intro-form" role="main">
					<div class="logo" style="background: url('<%= settings.logo %>') no-repeat top;"><span></span></div>
					<div class="slogan"><%= settings.appSlogan %></div>
					<div class="description"><%= settings.appDescription %></div>
					<div class="well">
						<h1 class="text-primary"><%= settings.appTitle %> - Change Password</h1>
						<% if (changeme) { %><h2 align=center>Required</h2><% } %>
						<!-- show any messages that come back with authentication -->
						<% if (message != '') { %>
							<div class="alert alert-danger"><%= message %></div>
						<% } %>
						<!-- PASSWORD FORM -->
						<form class="form-horizontal" role="form" action="password" method="post">
							<div class="form-group">
								<div class="col-sm-12">
									<input class="form-control" type="text" name="email" value=<%= email %> readonly>
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-12">
									<input class="form-control" type="password" name="password" placeholder="Enter your old password">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-12">
									<input class="form-control" type="password" name="passwordNew" placeholder="Enter your new password.">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-offset-9 col-sm-3">
									<button class="btn btn-primary btn-lg" type="submit">Change</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="footer text-with-background text-centered">
				<p>Or, go back to the <a href="<%= settings.chRoot %>/">Home</a> page.</p>
			</div>
		</div>
	</body>
</html>