<!-- views/login.ejs -->
<!doctype html>
<html lang="en">
	<head>
		<title><%= settings.appTitle %> - Login</title>
		<% include partials/meta %>
	</head>
	<body role="document" class="intro">
		<div id='wrapper'>
			<div id='page-content-wrapper'>
				<div id="main" class="container intro-form" role="main">
					<div class="logo" style="background: url('<%= settings.logo %>') no-repeat top;"><span></span></div>
					<div class="slogan"><%= settings.appSlogan %></div>
					<div class="description"><%= settings.appDescription %></div>
					<div class="well">
						<h1 class="text-primary"><%= settings.appTitle %> - Login</h1>
						<!-- show any messages that come back with authentication -->
						<% if (message != '') { %>
							<div class="alert alert-danger"><%= message %></div>
						<% } %>
						<!-- LOGIN FORM -->
						<form class="form-horizontal" role="form" action="login" method="post">
							<div class="form-group">
								<div class="col-sm-12">
									<input class="form-control" type="text" name="email" placeholder="Enter the email address you registered with.">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-12">
									<input class="form-control" type="password" name="password" placeholder="Enter your authorization code or password.">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-offset-9 col-sm-3">
									<button class="btn btn-primary btn-lg" type="submit">Login</button>
								</div>
							</div>
						</form>
						<p class="small">To reset your password click: [<a href="/password-reset">reset password</a>]</p>
					</div>
				</div>
			</div>
			<div class="footer text-with-background text-centered">
				<p>Need an account? <a href="signup">Signup here</a>. Or, go back to the <a href="<%= settings.chRoot %>/">Home</a> page.</p>
			</div>
		</div>
	</body>
</html>
